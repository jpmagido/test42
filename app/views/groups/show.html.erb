<div>
  <ul>
    <li>Titre du groupe: <%= @group.title %></li>
    <li>Description: <%= @group.description %></li>
    <li>Auteur: <%= @group.user.email %></li>
    <li>Membres:</li>
    <ul>
      <% @group.memberships.each do |member| %>
        <% if member.user == current_user %>
          <li> <%= member.user.email %>
            <%= link_to 'Voir Abonnement', membership_path(member.id) %>
          </li>
        <% end %>
      <% end %>
    </ul>
    <br>
    <li><%= link_to 'Page du groupe', group_path(@group.id) %></li>
    <li><%= link_to 'Modifier le groupe', edit_group_path(@group.id) %></li>
    <li><%= link_to 'Supprimer', group_path(@group.id), method: :delete, data: {confirm: "ÃŠtes-vous certain ? "} %></li>
    <li><%= link_to 'retour', :back %></li>
    <% unless @group.memberships.map(&:user).include?(current_user) %>
      <li>
        <%= button_to 'Rejoindre', {:action => 'create_membership', :user_id => current_user.id, :group_id => @group.id}, {:method => :post} %>
      </li>
    <% end %>
  </ul>
</div>
